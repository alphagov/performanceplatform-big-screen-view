<div>
  {{#showChange}}
    <p class="t-change change change-{{ latest.formatted_change_from_previous.trend }}">{{ latest.formatted_change_from_previous.change }} on previous {{ latest.period }}</p>
  {{/showChange}}
  {{#showPrevious}}
    <p class="t-second-most-recent second-most-recent">{{ previous.formatted_value }} for previous {{ latest.period }}</p>
  {{/showPrevious}}
</div>